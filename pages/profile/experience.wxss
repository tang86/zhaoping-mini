@import "../layout/style.wxss";

.resume-block {
  margin-top: 15rpx;
}

.resume-block .resume-row {
  width: 750rpx;
  height: 95rpx;
  line-height: 95rpx;
  background-color: #fff;
  padding-left: 24rpx;
  padding-right: 24rpx;
  box-sizing: border-box;
  overflow: hidden;
  clear: both;
}

.resume-block .label {
  font-size: 28rpx;
}

.resume-block .resume-row view.left {
  width: 200rpx;
}

.resume-block .resume-row view.right {
  text-align: right;
  width: 500rpx;
  font-size: 28rpx;
  color: #888;
}

.input {
  display: inline-block;
  vertical-align: middle;
  font-size: 28rpx;
  color: #888;
  text-align: right;
}

.resume-block .resume-row view.right picker {
  display: inline-block;
}

.resume-block .resume-row view.right .bold {
  display: inline-block;
  margin-left: 10rpx;
  margin-right: 10rpx;
}

.resume-block .resume-row .tap-mark {
  width: 12rpx;
  height: 21rpx;
  margin-left: 15rpx;
}

.resume-block .resume-row.under-line {
  border-bottom: solid 2rpx #eee;
}

.experience-title {
  height: 88rpx;
  line-height: 88rpx;
  font-size: 28rpx;
  color: #666;
  padding-left: 24rpx;
}

textarea {
  background-color: #fff;
  width: 100%;
  height: 252rpx;
  padding: 24rpx;
  box-sizing: border-box;
  margin-bottom: 80rpx;
}

.submit {
  background-color: #43aca3;
  color: #fff;
  font-size: 32rpx;
  line-height: 92rpx;
  height: 92rpx;
}
