@import "../layout/style.wxss";
.resume-block {
  margin-top: 15rpx;
}
.resume-block .resume-row {
  height: 95rpx;
  line-height: 95rpx;
  background-color: #fff;
  padding-left: 24rpx;
  padding-right: 24rpx;
  box-sizing: border-box;
}
.resume-block .label {
  font-size: 28rpx;
}

.resume-block .resume-row text.right {
  font-size: 28rpx;
  color: #888;
}

.resume-block .resume-row .tap-mark {
  display: block;
  width: 12rpx;
  height: 21rpx;
  margin-top: 36rpx;
  margin-left: 15rpx;
}
.resume-block .resume-row.under-line {
  border-bottom: solid 2rpx #eee;
}

.experience-title {
  height: 88rpx;
  line-height: 88rpx;
  font-size: 28rpx;
  color: #666;
  padding-left: 24rpx;
}
textarea {
  background-color: #fff;
  width: 100%;
  height: 252rpx;
  padding: 24rpx;
  box-sizing: border-box;
  margin-bottom: 80rpx;
}

.submit {
  background-color: #43aca3;
  color: #fff;
  font-size: 32rpx;
  line-height: 92rpx;
  height: 92rpx;
}