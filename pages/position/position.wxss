@import "../layout/style.wxss";

page {
  background-color: #f8f8f8;
}

.conditions {
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  border-top: solid 2rpx #eee;
  border-bottom: solid 2rpx #eee;
  position: relative;
  z-index: 20;
}

.conditions .sub-conditions {
  position: absolute;
  width: 100%;
  height: auto;
  text-align: center;
  background-color: #fff;
  font-size: 26rpx;
  line-height: 110rpx;
  border-top: solid 2rpx #eee;
}

.conditions .sub-conditions .simple-condition {
  height: 110rpx;
  border-bottom: 2rpx solid #eee;
}

.conditions .sub-conditions .multi-condition {
  width: 100%;
  height: 110rpx;
  border-bottom: 2rpx solid #eee;
  background-color: #fff;
  float: left;
}
.sub-city {
  background-color: #f8f8f8 !important;
}
.area-left {
  float: left;
  width: 49%;
}
.area-right {
  float: left;
  width: 49%;
}
.district-buttons {
  overflow: hidden;
  clear: both;
  width: 100%;
}
.district-reset {
  float: left;
  width: 49%;
  border-bottom: solid 2rpx #eee;
  border-right: solid 2rpx #eee;
  border-top: solid 2rpx #eee;
}
.district-confirm {
  float: left;
  width: 49%;
  border-bottom: solid 2rpx #eee;
  border-top: solid 2rpx #eee;
  color: #43aca3;
}
.position-condition {
  width: 49%;
  float: left;
  border-bottom: solid 2rpx #eee;
  border-right: solid 2rpx #eee;
}

.conditions text {
  height: 90rpx;
}

