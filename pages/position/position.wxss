.selected {
  color: #43aca3 !important;
}

.sub-selected {
  color: #43aca3 !important;
  background-color: #f8f8f8 !important;
}

.fold {
  display: inline-block;
  margin-left: 4rpx;
  width: 16rpx;
  height: 14rpx;
  line-height: 90rpx;
  vertical-align: middle;
}

.fold image {
  display: block;
  width: 14rpx;
  height: 9rpx;
  margin-left: 10rpx;
}

.condition-text {
  display: inline-block;
  text-align: center;
  height: 90rpx;
  line-height: 90rpx;
  width: 174rpx;
  font-size: 23.49rpx;
  color: #333;
}

.position-block {
  width: 100%;
  height: 216rpx;
  padding-top: 35rpx;
  padding-bottom: 28rpx;
  margin-bottom: 17rpx;
  background-color: #fff;
}

.position-name {
  overflow: hidden;
  padding: 0 !important;
}

.position-name .name {
  font-size: 32rpx;
  font-weight: bold;
}

.position-name .salary {
  font-size: 30rpx;
}

.position-company {
  padding: 0 !important;
  height: 50rpx;
}

.company-name {
  overflow: hidden;
  font-size: 28rpx;
}

.position-company .number {
  font-size: 22rpx;
}

.keywords {
  clear: both;
  width: auto;
  height: 44rpx;
}

.keywords .keyword {
  float: left;
  width: auto;
  height: 44rpx;
  background-color: #f8f8f9;
  border-radius: 10rpx;
  font-size: 22rpx;
  color: #999;
  text-align: center;
  line-height: 44rpx;
  padding: 9rpx 17rpx;
  margin-right: 24rpx;
}


/* 遮照层 开始 */
.wx-mask{
  position: fixed;
    z-index: 10;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.3);
}
/* 遮照层 结束 */