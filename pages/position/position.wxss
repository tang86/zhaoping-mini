@import "../layout/style.wxss";
page {
  background-color: #f8f8f8;
}
.conditions {
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  border-top: solid 2rpx #eee;
  border-bottom: solid 2rpx #eee;
}

.conditions text {
  height: 90rpx;
  line-height: 90rpx;
}
.separator{
  border-left: solid 1rpx #333;

}
.fold {
  margin-left: 4rpx;
}

.condition-text {
  display: inline-block;
  text-align: center;
  height: 90rpx;
  line-height: 90rpx;
  width: 174rpx;
  font-size: 23.49rpx;
  color: #333;
}

.position-block {
  width: 100%;
  height: 216rpx;

  padding-top: 35rpx;
  padding-bottom: 28rpx;
  margin-bottom: 17rpx;
  background-color: #fff;
}
.position-name {
  overflow: hidden;
  padding: 0 !important;


}
.position-name .name {
  font-size: 32rpx;
  font-weight: bold;
}
.position-name .salary {
  font-size: 30rpx;
}

.position-company {
  padding: 0 !important;
  height: 50rpx;

}

.company-name {
  overflow: hidden;
  font-size: 28rpx;
}
.position-company .number {
  font-size: 22rpx;
}

.keywords {
  clear: both;
  width: auto;
  height: 44rpx;
}

.keywords .keyword {
  float: left;
  width: auto;
  height: 44rpx;
  background-color: #f8f8f9;
  border-radius: 10rpx;
  font-size: 22rpx;
  color: #999;
  text-align: center;
  line-height: 44rpx;
  padding: 9rpx 17rpx;
  margin-right: 24rpx;

}