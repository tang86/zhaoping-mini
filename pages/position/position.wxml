<view class='conditions'>
  <view class='zc'>
    <view class='condition-text {{ conditions.district.selected }}' bindtap='selectedDistrict'><text>地区</text>
      <view class='fold'>
        <image src='{{ conditions.district.img }}'></image>
      </view>
    </view>

    <text class='separator'></text>
    <view class='condition-text {{ conditions.position.selected }}' bindtap='selectedPosition'><text>职位</text>
      <view class='fold'>
        <image src='{{ conditions.position.img }}'></image>
      </view>
    </view>
    <text class='separator'></text>
    <view class='condition-text {{ conditions.salary.selected }}' bindtap='selectedSalary'><text>工资</text>
      <view class='fold'>
        <image src='{{ conditions.salary.img }}'></image>
      </view>
    </view>
    <text class='separator'></text>
    <view class='condition-text {{ conditions.room.selected }}' bindtap='selectedRoom'><text>住宿</text>
      <view class='fold'>
        <image src='{{ conditions.room.img }}'></image>
      </view>
    </view>
  </view>



</view>



<block wx:for="{{ positions }}">
  <view class='position-block zc' data-id='{{ item.id }}' bindtap='toPositonDetail'>
    <view class='position-name'>
      <text class='block left name'>{{ item.name }}</text>
      <text class='block right salary theme-color'>5K-10K</text>
    </view>

    <view class='position-company'>
      <text class='block left company-name'>北京诺基亚有限公司</text>
      <text class='block right number'>预招{{ item.number }}人</text>
    </view>

    <view class='keywords'>
      <block>
        <view class='keyword'>
          <text>3年经验</text>
        </view>
      </block>
      <block>
        <view class='keyword'>
          <text>学历不限</text>
        </view>
      </block>
      <block>
        <view class='keyword'>
          <text>双休</text>
        </view>
      </block>
      <block>
        <view class='keyword'>
          <text>包吃住</text>
        </view>
      </block>
    </view>

  </view>
</block>

