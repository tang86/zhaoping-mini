@import "../layout/style.wxss";
page{
  box-sizing: border-box;
  padding-left: 24rpx;
  padding-right: 24rpx;
}
.show-title {
  height: auto;
  margin-top: 48rpx;
  font-size: 42rpx;
  /* font-weight: bold; */
  color: #333;

}

.show-post {
  font-size: 26rpx;
  color: #999;
}
.news-author {
  margin-right: 20rpx;
}
.news-date {
  margin-left: 30rpx;
}

.show-content {
  margin-bottom: 70rpx;
}
.show-content image {
  margin-top: 30rpx;
  display: block;
  width: 100%;
  height: 285rpx;
}

.show-content text {
  text-align: left;
  /* text-indent: 60rpx; */
  line-height: 36rpx;
  margin-top: 30rpx;
  display: block;
  font-size: 28rpx;
  color: #333;
  
}