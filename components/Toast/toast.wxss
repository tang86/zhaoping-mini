.toast-out {
  position: fixed;
  top: 440rpx;
  left: 95rpx;
  z-index: 9999;
  width: 560rpx;
  height: 190rpx;
  display: flex;            
  justify-content: center; 
  additive-symbols: center;
}
.toast-out .toast-in {
  min-width: 100px;
  width: 100%;
  height: 100%;
  margin: auto;
  background: rgba(0, 0, 0, 0.7);
  padding: 6px;
  text-align: center;
  color: white;
  border-radius: 8px;
}
.toast-out .toast-in span {
  font-size: 30px;
}
.toast-out .toast-in .toast-txt {
  font-size: 36rpx;
  color: #ffda13;
  padding-top: 35rpx; 
}

.toast-txt text {
  display: block;
}